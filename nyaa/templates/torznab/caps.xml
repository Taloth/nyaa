<caps>
    <server version="1.0" title="{{ config.SITE_NAME }}" strapline="..." url="{{ url_for('home', _external=True) }}" image="..." />

    <limits max="{{ config.RESULTS_PER_PAGE }}" default="{{ config.RESULTS_PER_PAGE }}" />
    <registration available="no" open="no" />
    <searching>
        <search available="yes" supportedParams="q" />
        <tv-search available="yes" supportedParams="q" />
        <movie-search available="no" />
        <audio-search available="no" />
    </searching>
    <categories>
        {# TODO: Generate from central source/table #}

        <!-- Generic Newznab/Torznab categories, may not include all releases -->
        {# See https://github.com/nZEDb/nZEDb/blob/0.x/docs/newznab_api_specification.txt #}
        <category id="3000" name="Audio">
            <subcat id="3010" name="MP3" />
            <subcat id="3040" name="Lossless" /> {# Includes 100201 #}
            <subcat id="3060" name="Foreign" />
        </category>
        <category id="4000" name="PC">
            <subcat id="4050" name="Games" />    {# Includes 100602 #}
        </category>
        <category id="5000" name="TV">
            <subcat id="5070" name="Anime" />    {# Includes 100102 #}
        </category>
        <category id="7000" name="Books"> 
            <subcat id="7020" name="Ebook" />    {# Includes 100301 #}
            <subcat id="7060" name="Foreign" />  {# Includes 100302 #}
        </category>

        <!-- Nyaa Specific categories -->
        {% for category in categories %}
        <category id="{{ 100000 + category.id * 100 }}" name="{{ category.name }}">
            {% for subcat in category.sub_categories %}
            <subcat id="{{ 100000 + category.id * 100 + subcat.id }}" name="{{ category.name }} - {{ subcat.name }}" />
            {% endfor %}
        </category>
        {% endfor %}
    </categories>
    <groups></groups>
    <genres></genres>
</caps>